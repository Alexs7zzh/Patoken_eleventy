<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% set currentTitle = (title + " | " + meta.title) if title else meta.title %}
    <title>{{ currentTitle }}</title>
    <meta property="og:title" content="{{ currentTitle }}">
    <meta property="og:site_name" content="{{ meta.title }}">
    <meta property="og:url" content="{{ meta.url }}">
    <link rel="canonical" href="{{ meta.url }}{{ page.url }}">
    
    {# Put icon images in assets folder #}
    {# <link rel="icon" href="/icon-32.png" sizes="32x32">
    <link rel="icon" href="/icon-96.png" sizes="96x96">
    <link rel="icon" href="/icon-180.png" sizes="180x180"> #}
    <link as="style" href={{ "/style.css" | cssHash }} rel="preload">
    <link rel="stylesheet" href={{ "/style.css" | cssHash }} type="text/css">
    <script async defer data-website-id="ba310c36-9271-4c03-9241-3b79e7eecdf8" src="https://umami.shinlog.me/umami.js"></script>
  </head>
  <body>
    <header>
      <h1><a href="/">{{ meta.title }}</a></h1>
      <nav>
        <h2>People</h2>
        <ul>
          {% for author in authors %}
            <li>
              <a href="/{{ author.slug }}">{{ author.name }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </header>

    <main>
      {{ content | safe }}
    </main>
    
    {# <script type="module" src={{ "/script.js" | jsHash }}></script> #}
  </body>
</html>